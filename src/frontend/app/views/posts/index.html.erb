<!-- View to show all posts in database -->
<!-- Page Content -->
<div class="container" id="post_table">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">List All Post</h1>
      <ol class="breadcrumb">
        <li><a href="/">Home</a>
        </li>
        <li class="active"><a href="/">List All Post</a></li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="table-responsive">
      <table class="table table-hover">
        <tbody id="list_post">
          <%= render  partial: 'shared/posts/list_posts', locals:  {posts:@posts} %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center">
    <%= paginate @posts %>
  </div>
  <!-- #post_modal -->
  <%= button_to "New Post", new_post_path, :method => :get, :remote => true, "data-target" => "#myModal", "data-toggle" => "modal", :type => "button", class: "btn btn-primary" %>
  <!-- Modal -->
</div>
