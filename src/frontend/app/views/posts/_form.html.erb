<!-- Form for create new post, edit old post -->
<%= form_for(@post, remote: true) do |f| %>
<div class="row">
  <div class="col-xs-6 col-md-4">
    <div class="well">
      <div>
        <%= f.label :Title %>
        <%= f.text_field :title, :required => true , class: "form-control"%>
      </div>
      <div>
        <%= f.label :Description %>
        <%= f.text_area :description, class: "form-control", :required => true %>
      </div>
      <div>
        <%= f.label :Thumbnail %>
        <%= f.text_field :thumbnail, :required => true, class: "form-control"%>
      </div>
      <br/>
      <div>
        <%= f.label :Status %>
        <%= f.check_box :status %>
      </div>
          <!-- hidden_field store user_id -->
          <%= f.hidden_field :user_id, :value => "2121" %>
    </div>
  </div>
  <div class="col-xs-12 col-md-8">
    <div class="well">
          <%= f.label :Content %>
          <%= f.text_area :content, class: "form-control", :required => true, :id => "ckedit_abcd" %>
    </div>
      <!-- Check current page to show button need -->
      <% if  request.fullpath == "/posts/new" %>
        <%= f.submit 'Create Post', :class => 'btn btn-success pull-right' %>
      <% else %>
        <%= f.submit 'Edit Post', :class => 'btn btn-success pull-right' %>
      <% end %>
  </div>
    <div>
      <br/>
    </div>
</div>
<% end %>
<br/>
<script>
  CKEDITOR.replace("ckedit_abcd");
</script>

