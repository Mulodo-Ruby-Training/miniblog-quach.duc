   <div class="container">
    <%= form_for @user, :multipart => true do |f| %>
      <% if @user.errors.any? %>
      <%= render  partial: '/shared/flash/flash_messages', locals: {notice_type:"errors_list"} %>
      <% end %>
      <%= render  partial: '/shared/flash/flash_messages', locals: {notice_type:"alert"} %>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="login-panel panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-user"></i>&nbsp;<b>EDIT ACCOUNT</b></h3>
            </div>
            <div class="panel-body">
              <form role="form">
                <fieldset>
                  <% case request.fullpath.split("/")[1] %>
                  <% when "edit_user_info" %>
                    <%= render :partial => 'users/form/form_edit_info', locals: {f:f} %>
                  <% when "edit_user_pass" %>
                    <%= render :partial => 'users/form/form_change_pass', locals: {f:f} %>
                  <% else %>
                    <%= render :partial => 'users/form/form_edit_info', locals: {f:f} %>
                  <% end %>
                  <ul class="list-inline">
                      <li><%= link_to 'Back', root_url, :class => 'btn btn-default'  %></li>
                      <li><%= f.submit 'Change', :class => 'btn btn-success' %></li>
                  </ul>
                </fieldset>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>