 <div class="container">
      <%= render  partial: '/shared/flash/flash_messages', locals: {notice_type:"notice"} %>
      <div class="row">
          <div class="col-md-4 col-md-offset-4">
              <div class="login-panel panel panel-default">
                  <div class="panel-heading">
                      <h3 class="panel-title"><b>PROFILE 'S <%= @user[:username].upcase %></b> </h3>
                  </div>
                  <div class="panel-body">
                      <form role="form">
                          <fieldset>
                            <div class="form-group">
                                <label>Email</label>&nbsp;<%= @user[:email]%>
                            </div>
                            <div class="form-group">
                                <label>Name</label>&nbsp;<%= @user[:first_name] + @user[:last_name]%>
                            </div>
                            <div class="form-group">
                                <label>Address</label>&nbsp;<%= @user[:address] %>
                            </div>
                            <div class="form-group">
                                <label>Birthday</label>&nbsp;<%= @user[:birthday]%>
                            </div>
                            <div class="form-group">
                                <label>Male</label>&nbsp;<%= @user[:gender]%>
                            </div>
                            <ul class="list-inline">
                                <li><%= link_to 'Back', root_url, :class => 'btn btn-success'  %></li>
                                <li><%= link_to 'Edit',edit_user_path(@user), :class => 'btn btn-primary' %></li>
                                <li><%= link_to 'List Post',"/posts?user_id="+@user[:id].to_s, :class => 'btn btn-default' %></li>
                            </ul>
                          </fieldset>
                      </form>
                  </div>
              </div>
          </div>
      </div>
</div>