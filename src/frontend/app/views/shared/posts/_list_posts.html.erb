  <div class="col-lg-12">
    <% posts.each do |post| %>
      <!-- Get request no parameters -->
      <% case request.fullpath.split("?")[0] %>
      <% when "/posts" %>
        <div class="col-md-3 text-center">
            <div class="thumbnail">
                  <% if post.thumbnail_path %>
                    <div style="width: 237px; height:135px; border:solid">
                      <%= image_tag "/upload/"+ post.thumbnail_path,:style => " width: 100%; height: 100%; object-fit: contain;" %>
                    </div>
                <% else %>
                   <div style="width: 237px; height:135px; border:solid">
                      <%=  image_tag "no_images.jpeg",:style => " width: 100%; height: 100%; object-fit: contain;" %>
                    </div>
                <% end %>
                <div class="caption">
                    <h3><%= post.title %><br>
                        <!-- TODO: username -->
                        <small><%= link_to "Author","/users/"+post.user_id.to_s %></small>
                    </h3>
                    <p><%= post.description.truncate(20, :separator => " ") %></p>
                    <ul class="list-inline">
                        <li>
                          <a href="/posts/<%= post.id %>" class="btn btn-primary">Read More</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- If URL is home -->
        <% when "/" %>
          <div class="row">
              <div class="col-md-3">
                  <% if post.thumbnail_path %>
                    <div style="width: 150px; height:150px; border:solid">
                      <%= image_tag "/upload/"+ post.thumbnail_path,:style => " width: 100%; height: 100%; object-fit: contain;" %>
                    </div>
                <% else %>
                   <div style="width: 150px; height:150px; border:solid">
                      <%=  image_tag "no_images.jpeg",:style => " width: 100%; height: 100%; object-fit: contain;" %>
                    </div>
                <% end %>
              </div>
              <div class="col-md-6">
                  <h3>
                      <a href="/posts/<%= post.id %>"><%= post.title.upcase %></a>
                  </h3>
                  <p><%= post.created_at %></p>
                  <p><%= link_to "Author","/users/"+post.user_id.to_s %></p>
                  <p><%= post.description.truncate(30, :separator => " ") %></p>
              </div>
            </div>
            <br/>
      <% end %>
    <% end %>
  </div>
<!-- /.row -->