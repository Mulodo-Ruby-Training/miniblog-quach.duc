 <!-- Page Content -->
<div class="container">
   <!-- Page Heading/Breadcrumbs -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">List All Post</h1>
          <ol class="breadcrumb">
              <li><a href="/">Home</a>
              </li>
              <li class="active">List All Post</li>
          </ol>
      </div>
  </div>
  <div class="text-center">
    <%= paginate @posts %>
  </div>
  <br/>
  <br/>
  <br/>
  <% @posts.each do |post| %>
        <div class="row">
          <div class="col-md-1 text-center">
              <p><i class="fa fa-camera fa-4x"></i>
              </p>
              <p><%= post.created_at %></p>
          </div>
          <div class="col-md-5">
              <a href="/posts/<%= post.id %>">
                  <img class="img-responsive img-hover" src="http://placehold.it/400x300" alt="">
              </a>
          </div>
          <div class="col-md-6">
              <h3>
                  <a href="blog-post.html"><%= post.title %></a>
              </h3>
              <p>by <a href="#">Start Bootstrap</a>
              </p>
              <p><%= post.description %></p>
              <a class="btn btn-primary" href="/posts/<%= post.id %>">Read More <i class="fa fa-angle-right"></i></a>
          </div>
        </div>
        <br/>
  <% end %>
  <br/>
  <br/>
</div>